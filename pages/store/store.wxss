.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 90rpx;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 92rpx;
  left: 0;
  z-index: 2000;
  background: #fff;
}

.store-nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
}

.store-nav1 {
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 24rpx;
  color: #333;
